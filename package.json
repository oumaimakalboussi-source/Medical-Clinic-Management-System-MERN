{
  "name": "clinic-management-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:backend": "npm run dev -w packages/backend",
    "dev": "concurrently -c \"green,cyan\" -n backend,frontend \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build:frontend": "npm run build -w packages/frontend",
    "build:backend": "npm run start -w packages/backend",
    "build": "npm run build:frontend",
    "preview": "npm run preview -w packages/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
